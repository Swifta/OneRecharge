<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.swifta.onerecharge.agentdashboard.ProfileRulesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_margin">

            <ImageView
                android:id="@+id/icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/activity_margin"
                android:layout_marginRight="@dimen/activity_margin"
                android:src="@drawable/ic_account_balance_wallet_grey_500_24dp"/>

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/icon1"
                android:layout_toRightOf="@id/icon1"
                android:fontFamily="sans-serif-medium"
                android:text="@string/msisdn_purchase_limit"
                android:textSize="@dimen/profile_rules_text_size"/>

            <TextView
                android:id="@+id/msisdn_purchase_limit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text1"
                android:layout_toEndOf="@id/icon1"
                android:layout_toRightOf="@id/icon1"
                android:fontFamily="sans-serif-medium"
                android:textColor="@android:color/darker_gray"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_margin">

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/activity_margin"
                android:layout_marginRight="@dimen/activity_margin"
                android:src="@drawable/ic_account_balance_wallet_grey_500_24dp"/>

            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/icon2"
                android:layout_toRightOf="@id/icon2"
                android:fontFamily="sans-serif-medium"
                android:text="@string/minimum_wallet_ballance"
                android:textSize="@dimen/profile_rules_text_size"/>

            <TextView
                android:id="@+id/minimum_wallet_balance_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text2"
                android:layout_toEndOf="@id/icon2"
                android:layout_toRightOf="@id/icon2"
                android:fontFamily="sans-serif-medium"
                android:textColor="@android:color/darker_gray"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_margin">

            <ImageView
                android:id="@+id/icon3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/activity_margin"
                android:layout_marginRight="@dimen/activity_margin"
                android:src="@drawable/ic_account_balance_wallet_grey_500_24dp"/>

            <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/icon3"
                android:layout_toRightOf="@id/icon3"
                android:fontFamily="sans-serif-medium"
                android:text="@string/airtime_purchase_discount"
                android:textSize="@dimen/profile_rules_text_size"/>

            <TextView
                android:id="@+id/airtime_purchase_discount_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text3"
                android:layout_toEndOf="@id/icon3"
                android:layout_toRightOf="@id/icon3"
                android:fontFamily="sans-serif-medium"
                android:textColor="@android:color/darker_gray"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_margin">

            <ImageView
                android:id="@+id/icon4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/activity_margin"
                android:layout_marginRight="@dimen/activity_margin"
                android:src="@drawable/ic_account_balance_wallet_grey_500_24dp"/>

            <TextView
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/icon4"
                android:layout_toRightOf="@id/icon4"
                android:fontFamily="sans-serif-medium"
                android:text="@string/airtime_sold_commission"
                android:textSize="@dimen/profile_rules_text_size"/>

            <TextView
                android:id="@+id/airtime_sold_commission_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text4"
                android:layout_toEndOf="@id/icon4"
                android:layout_toRightOf="@id/icon4"
                android:fontFamily="sans-serif-medium"
                android:textColor="@android:color/darker_gray"/>
        </RelativeLayout>

    </LinearLayout>
</ScrollView>
