<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.swifta.onerecharge.agentdashboard.ProfileRulesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_margin"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:contentPadding="@dimen/activity_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_margin">

                    <ImageView
                        android:id="@+id/icon1"
                        style="@style/ProfileFragmentIcon"/>

                    <TextView
                        android:id="@+id/text1"
                        style="@style/ProfileFragmentText"
                        android:layout_toEndOf="@id/icon1"
                        android:layout_toRightOf="@id/icon1"
                        android:text="@string/msisdn_purchase_limit"/>

                    <TextView
                        android:id="@+id/msisdn_purchase_limit_text"
                        style="@style/ProfileFragmentValue"
                        android:layout_below="@id/text1"
                        android:layout_toEndOf="@id/icon1"
                        android:layout_toRightOf="@id/icon1"/>
                </RelativeLayout>

                <View style="@style/HorizontalDivider"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_margin">

                    <ImageView
                        android:id="@+id/icon2"
                        style="@style/ProfileFragmentIcon"/>

                    <TextView
                        android:id="@+id/text2"
                        style="@style/ProfileFragmentText"
                        android:layout_toEndOf="@id/icon2"
                        android:layout_toRightOf="@id/icon2"
                        android:text="@string/minimum_wallet_ballance"/>

                    <TextView
                        android:id="@+id/minimum_wallet_balance_text"
                        style="@style/ProfileFragmentValue"
                        android:layout_below="@id/text2"
                        android:layout_toEndOf="@id/icon2"
                        android:layout_toRightOf="@id/icon2"/>
                </RelativeLayout>

                <View style="@style/HorizontalDivider"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_margin">

                    <ImageView
                        android:id="@+id/icon3"
                        style="@style/ProfileFragmentIcon"/>

                    <TextView
                        android:id="@+id/text3"
                        style="@style/ProfileFragmentText"
                        android:layout_toEndOf="@id/icon3"
                        android:layout_toRightOf="@id/icon3"
                        android:text="@string/airtime_purchase_discount"/>

                    <TextView
                        android:id="@+id/airtime_purchase_discount_text"
                        style="@style/ProfileFragmentValue"
                        android:layout_below="@id/text3"
                        android:layout_toEndOf="@id/icon3"
                        android:layout_toRightOf="@id/icon3"/>
                </RelativeLayout>

                <View style="@style/HorizontalDivider"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_margin">

                    <ImageView
                        android:id="@+id/icon4"
                        style="@style/ProfileFragmentIcon"/>

                    <TextView
                        android:id="@+id/text4"
                        style="@style/ProfileFragmentText"
                        android:layout_toEndOf="@id/icon4"
                        android:layout_toRightOf="@id/icon4"
                        android:text="@string/airtime_sold_commission"/>

                    <TextView
                        android:id="@+id/airtime_sold_commission_text"
                        style="@style/ProfileFragmentValue"
                        android:layout_below="@id/text4"
                        android:layout_toEndOf="@id/icon4"
                        android:layout_toRightOf="@id/icon4"/>
                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
